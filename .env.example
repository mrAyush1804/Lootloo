# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/taskloot
DATABASE_POOL_SIZE=20
DATABASE_POOL_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----
YOUR_RSA_PRIVATE_KEY_HERE
-----END RSA PRIVATE KEY-----
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
YOUR_RSA_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@taskloot.com
FROM_NAME=TaskLoot

# Payment Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
S3_BUCKET=taskloot-storage
CDN_URL=https://cdn.taskloot.com

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AB_TESTING=false
ENABLE_REAL_TIME_UPDATES=true

# External Services
FIREBASE_PROJECT_ID=your_firebase_project_id
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# Performance
CACHE_TTL_SECONDS=300
MEMORY_CACHE_SIZE=1000
COMPRESSION_ENABLED=true

# Business Logic
MAX_TASK_REWARD_VALUE=10000
MIN_TASK_REWARD_VALUE=10
FEATURED_TASK_COST_PER_DAY=99
COMMISSION_RATE=0.15
REWARD_EXPIRY_DAYS=30
