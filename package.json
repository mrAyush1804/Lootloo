{
  "name": "taskloot",
  "version": "1.0.0",
  "description": "Production-grade TaskLoot gaming platform with microservices architecture",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "migrate": "node src/database/migrate.js",
    "migrate:rollback": "node src/database/rollback.js",
    "seed": "node src/database/seed.js",
    "build": "echo 'Backend build complete - no compilation needed'",
    "build:docker": "docker build -t taskloot:latest .",
    "smoke-test": "node tests/smoke.js"
  },
  "keywords": [
    "gaming",
    "puzzle",
    "rewards",
    "microservices",
    "nodejs",
    "production"
  ],
  "author": "TaskLoot Engineering Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "aws-sdk": "^2.1498.0",
    "razorpay": "^2.9.2",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "@sentry/node": "^7.77.0",
    "dd-trace": "^4.25.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "socket.io": "^4.7.4",
    "bull": "^4.12.2",
    "pdfkit": "^0.14.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/jest": "^29.5.8",
    "playwright": "^1.40.1",
    "docker": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
